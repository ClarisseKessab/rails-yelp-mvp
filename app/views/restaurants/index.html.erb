<h1 class="text-center my-5">La liste de restaurants</h1>
<div class="card m-5">
  <div class="mb-3">
    <ul class="list-group m-5">
      <% @restaurant.each do |restaurant|%>
        <div class="d-flex flex-column g-col-6 my-3">
          <li class="list-group-item d-flex flex-column g-col-6 p-2">
            <%= link_to restaurant.name, restaurant_path(restaurant)%>
            <%=restaurant.address %>
            <%=restaurant.category %>
            </li>
        </div>
      <% end %>
    </ul>
  </div>
  <div class="mb-3 text-center">
  </div>
</div>
