<div class="card p-5 m-5">
<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<div class="card p-2">
<p><strong class=text-center>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> <%= review.rating %></li>
  <% end %>
</ul>
<br>
</div>
<div class="d-flex gap-3">
<div class="my-3">
<%= link_to "Back to home", restaurants_path, :class => 'btn btn-primary' %>
<%= link_to "Add a review", new_restaurant_review_path(@restaurant), :class => 'btn btn-primary' %>

</div>
</div>
</div>
