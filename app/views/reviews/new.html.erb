<div class="card m-5 p-5">
<h1>New review</h1>
<p>Find me in app/views/reviews/new.html.erb</p>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0,1,2,3,4,5] %>

  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
</div>
